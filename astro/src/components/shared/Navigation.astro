---
import { Image } from 'astro:assets';
import Hamburger from '/public/assets/hamburger.svg'

---



<nav class="flex justify-between items-center fixed z-10 p-4 bg-primary/75">
  <div class="flex justify-between w-screen items-center pr-8">
    <a class="text-4xl font-extrabold py-2 px-4 rounded-full" href="/"> C4C </a>
    <Image src={Hamburger} alt="Hamburger menu" class="h-8 w-8" id="menu-button" />
  </div>
  <div id="menu" class="hidden md:flex gap-8">
    <a class="transition duration-110 hover:scale-125" href='/'
    >Home</a
  >
    <a class="transition duration-110 hover:scale-125" href='/about'
      >About</a
    >
    <a
      class="transition duration-110 hover:scale-125"
      href='/contributors'>Contributors</a
    >
    <a
      class="transition duration-110 hover:scale-125"
      href='/contact'>Contact</a
    >
  </div>
  <div class="bg-text h-[5px] rounded-full mx-4"></div>
</nav>

<script>
  let isOpen = false;
    
  const menu = document.getElementById('menu');
  
  const menuButton = document.getElementById('menu-button');
  menuButton.addEventListener('click', toggleMenu);
  
  function toggleMenu() {
    isOpen = !isOpen;
    menu.className = isOpen
      ? "absolute flex flex-col gap-8 justify-evenly text-3xl font-extrabold w-screen h-screen top-[100%] text-center bg-primary/75"
      : "hidden";
}

</script>
